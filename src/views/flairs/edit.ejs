<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

     <main class="container">

       <h1>Edit Flair</h1>

       <form action="/topics/<%= post.topicId %>/posts/<%= flair.postId %>/flairs/<%= flair.id %>/update" method="post">
        <div class="form-group">
          <label for="name">Flair name</label>
          <input class="form-control" name="name" placeholder="Enter Flair Name" type="text" value="<%= flair.name %>" aria-describedby="titleHelp" >
        </div>
        <div class="form-group">
          <label for="color">Flair color</label>
          <input class="form-control" name="color" placeholder="Enter Flair Color" type="text" value="<%= flair.color %>">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
      <form style="display:initial" action="/topics/<%= post.topicId %>/posts/<%= post.id %>/flairs/<%= flair.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    </main>

     <% include ../static/partials/baseScripts.ejs %>

   </body>
</html>